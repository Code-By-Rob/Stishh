<% layout('../layouts/boilerplate') %>
<style>
    html, body, main {
        height: 100%;
        width: 100%;
    }
    #centred {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translateX(-50%) translateY(-50%);
    }
</style>
<div id="centred" class="w-100 h-100 d-flex justify-content-center align-items-center">
    <div class="card shadow p-3 d-inline-block">
        <div class="d-flex flex-column align-items-center h-auto">
            <img src="/Vector-Icons/Stishh-sm-rounded.svg" alt="" width="100" height="40">
            <div class="mt-4">
                <label class="form-label" for="photo">Author Photo</label>
                <input id="photo" class="form-control" type="file" accept="image/*"></input>
            </div>
            <div class="mt-4">
                <button id="photo-submit-button" class="btn btn-primary">Submit</button>
            </div>
        </div>
    </div>
</div>
<script src="/JS/new-login.js"></script>